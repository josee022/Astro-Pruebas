---
import BaseLayout from '../layouts/BaseLayout.astro';

// Carga todos los posts de Markdown
const posts = import.meta.glob('../content/posts/*.md', { eager: true });
---

<BaseLayout title="Blog" slogan="Consejos para tu mascota">
  <section class="py-10 px-5 bg-white text-center">
    <h2 class="text-2xl font-semibold mb-6">Blog de Cuidado de Mascotas</h2>
    <ul class="space-y-4">
      {Object.entries(posts).map(([path, post]) => (
        <li>
          <a href={`/posts/${post.frontmatter.slug}`} class="text-blue-500 hover:underline">{post.frontmatter.title}</a>
          <p class="text-sm text-gray-500">{post.frontmatter.date}</p>
        </li>
      ))}
    </ul>
  </section>
</BaseLayout>
