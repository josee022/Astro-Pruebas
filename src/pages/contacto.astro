---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "Contacto";
const slogan = "Hablemos";
---

<BaseLayout {title} {slogan}>
  <section class="py-10 px-5 bg-white text-center">
    <h2 class="text-2xl font-semibold mb-6">Contactanos</h2>
    <p class="mb-4">Dejanos tus datos y te contactaremos.</p>
    <form class="max-w-md mx-auto">
      <input type="text" placeholder="Nombre" class="block w-full mb-4 p-2 border rounded" />
      <input type="email" placeholder="Correo" class="block w-full mb-4 p-2 border rounded" />
      <textarea placeholder="Mensaje" class="block w-full mb-4 p-2 border rounded"></textarea>
      <button type="submit" class="px-6 py-2 bg-blue-500 text-white rounded-full font-medium hover:bg-blue-600 transition">
        Enviar Mensaje
      </button>
    </form>
  </section>
</BaseLayout>
