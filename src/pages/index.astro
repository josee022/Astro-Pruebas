---
import BaseLayout from '../layouts/BaseLayout.astro';
import Servicio from '../components/Servicio.astro';
import GaleriaImagen from '../components/GaleriaImagen.astro';
import Testimonio from '../components/Testimonio.astro';

const title = "Bienvenidos a Spa Canino";
const slogan = "Cuidando a tu mascota con amor y dedicacion";
---

<BaseLayout {title} {slogan}>
  <!-- Seccion de Servicios -->
  <section id="servicios" class="py-10 px-5 bg-gradient-to-r from-blue-100 to-blue-50 rounded-lg shadow-lg my-10">
    <h2 class="text-2xl font-semibold text-center mb-6">Nuestros Servicios</h2>
    <div class="flex flex-col md:flex-row gap-5 justify-center">
      <Servicio titulo="Bano y Corte" descripcion="Cuidado completo para mantener a tu mascota limpia y fresca." imagen="/imagenes/servicio-bano-corte.jpg" />
      <Servicio titulo="Corte de Unas" descripcion="Manten las unas de tu mascota seguras y en buen estado." imagen="/imagenes/servicio-corte-unas.jpg" />
      <Servicio titulo="Masajes Relajantes" descripcion="Ayuda a tu mascota a relajarse y reducir el estres." imagen="/imagenes/servicio-masaje.jpg" />
    </div>
  </section>

  <!-- Seccion de Galeria -->
  <section id="galeria" class="py-10 px-5 bg-gray-50">
    <h2 class="text-2xl font-semibold text-center mb-6">Galeria</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-5">
      <GaleriaImagen src="/imagenes/galeria1.jpg" alt="Galeria 1" />
      <GaleriaImagen src="/imagenes/galeria2.jpg" alt="Galeria 2" />
      <GaleriaImagen src="/imagenes/galeria3.jpg" alt="Galeria 3" />
      <GaleriaImagen src="/imagenes/galeria4.jpg" alt="Galeria 4" />
      <GaleriaImagen src="/imagenes/galeria5.jpg" alt="Galeria 5" />
      <GaleriaImagen src="/imagenes/galeria6.jpg" alt="Galeria 6" />
    </div>
  </section>

  <!-- Seccion de Testimonios -->
  <section id="testimonios" class="py-10 px-5 bg-white text-center">
    <h2 class="text-2xl font-semibold mb-6">Testimonios de Nuestros Clientes</h2>
    <div class="flex flex-col md:flex-row gap-5 justify-center">
      <Testimonio nombre="Ana Gonzalez" comentario="Excelente servicio, mi mascota siempre sale feliz!" imagen="/imagenes/cliente1.jpg" />
      <Testimonio nombre="Carlos Perez" comentario="El mejor spa para mascotas de la ciudad." imagen="/imagenes/cliente2.jpg" />
      <Testimonio nombre="Maria Lopez" comentario="Trato muy profesional y cuidadoso. Recomendado!" imagen="/imagenes/cliente3.jpg" />
    </div>
  </section>

  <!-- Seccion de Contacto -->
  <section id="contacto" class="py-10 px-5 bg-white text-center">
    <h2 class="text-2xl font-semibold mb-6">Contactanos</h2>
    <p class="mb-4">Llama ahora y agenda una cita para tu mascota.</p>
    <button class="px-6 py-2 bg-blue-500 text-white rounded-full font-medium hover:bg-blue-600 transition transform hover:scale-105">
      Agenda Ahora
    </button>
  </section>
</BaseLayout>
